# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                 controllers.Home.index()
GET         /upload                           controllers.Home.upload()
POST        /upload                           controllers.Home.save()
GET         /media                            controllers.Home.media()
GET         /media/:id                        controllers.Home.contents(id:  String)
GET         /partial_contents/:keyword        controllers.Home.partial_contents(keyword:  String)
GET         /partial_tweets/:keyword          controllers.Home.partial_tweets(keyword:  String)


GET         /chat                             controllers.Chat.index
GET         /chat/room                        controllers.Chat.chatRoom(u: String ?= null)
GET         /chat/join                        controllers.Chat.chat(u)
GET         /chat/nltk                        controllers.Chat.nltk(text: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)